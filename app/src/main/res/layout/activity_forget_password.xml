<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_forget_password"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context="com.example.aaditya.gradecalculator.ForgetPassword">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="#F6F6F6"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:weightSum="1"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">

        <Button
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="#F6F6F6"
            android:layout_gravity="center"
            android:text="gradeCal.in"
            android:textColor="#FFA500"
            android:textSize="30dp"
            android:id="@+id/title"
            android:textStyle="bold"
            android:layout_weight="0.13"
            android:clickable="false" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Password assistance"
            android:textSize="25dp"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="20dp"
            android:textStyle="bold"
            android:textColor="#000000"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Enter the registered email address associated with your Gradecal account."
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="15dp"
            android:textSize="15dp"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:hint=" Your email address"
            android:layout_marginTop="20dp"
            android:id="@+id/forget_email"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true" />

        <TextView

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/forget_email"
            android:layout_toStartOf="@+id/forget_answers"
            android:visibility="invisible"
            android:textStyle="bold"
            android:textSize="15dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="20dp"
            android:id="@+id/forget_questions" />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:layout_marginLeft="20dp"
            android:ems="10"
            android:visibility="invisible"
            android:layout_marginRight="20dp"
            android:hint="Answer"
            android:id="@+id/forget_answers"
            android:layout_centerVertical="true"
            android:layout_alignStart="@+id/forget_email" />

        <Button
            android:text="Continue"
            android:onClick="forget_submit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/textroundborder"
            android:id="@+id/forget_submit"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="15dp"
            android:textSize="20dp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:text="Forgot from which email address you had registered?"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="10dp"
            android:text="If you have forgoten from which email address you had registered,contact our team.Mail us team@gradecal.com "/>

        <Button
            android:text="Forward"
            android:visibility="invisible"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/forget_answers"
            android:layout_toStartOf="@+id/forget_email"
            android:id="@+id/forward" />
    </LinearLayout>
</RelativeLayout>
